<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
    >

<EditText android:id="@+id/text_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="60sp"
    android:editable="false"
    android:cursorVisible="false"
    android:background="@android:color/black"
    android:textColor="@android:color/background_light"
    />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <Button android:id="@+id/button1"
        android:text="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"

        />

    <Button android:id="@+id/button2"
        android:text="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/button3"
        android:text="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/buttonPlus"
        android:text="+"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <Button android:id="@+id/button4"
        android:text="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/button5"
        android:text="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/button6"
        android:text="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/buttonMoins"
        android:text="-"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <Button android:id="@+id/button7"
        android:text="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/button8"
        android:text="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/button9"
        android:text="9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/buttonMultiplier"
        android:text="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <Button android:id="@+id/button0"
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/buttonPoint"
        android:text="."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

    <Button android:id="@+id/buttonClear"
        android:text="C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/background_light"
        />

    <Button android:id="@+id/buttonDivision"
        android:text="/"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        />

</LinearLayout>

<Button android:id="@+id/buttonEgal"
    android:text="="
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="50sp"
    android:backgroundTint="@android:color/black"
    android:textColor="@android:color/background_light"
    />

</LinearLayout>
